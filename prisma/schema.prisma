// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id                    Int @id @default(autoincrement())
  username              String @unique
  password              String
  active                Boolean
  hasPeng               Boolean
  role                  Role @default(USER)
  courseSection         CourseSections[]
}

model Schedules {
  id                    Int @id @default(autoincrement())
  year                  Int
  createdOn             DateTime @default(now())
  courseSection         CourseSections[]
}

model CourseSections {
  id                    Int @id @default(autoincrement())
  hoursPerWeek          Float
  capacity              Int
  startDate             DateTime
  endDate               DateTime
  meetingTimes          MeetingTimes @relation(fields: [meetingTimesId], references: [id])
  meetingTimesId        Int
  user                  Users? @relation(fields: [userId], references: [id])
  userId                Int?
  course                Courses @relation(fields: [courseId], references: [id])
  courseId              Int
  schedule              Schedules? @relation(fields: [scheduleId], references: [id])
  scheduleId            Int?
  teachingPreference    TeachingPreferences[]

}

model Courses {
  id                    Int @id @default(autoincrement())
  subject               String
  courseCode            String
  term                  String
  courseSection         CourseSections[]
  teachingPreference    TeachingPreferences[]
}

model TeachingPreferences {
  id                    Int @id @default(autoincrement())
  preference            Int
  course                Courses @relation(fields: [courseId], references: [id])
  courseSection         CourseSections? @relation(fields: [courseSectionId], references: [id])
  courseSectionId       Int?
  courseId              Int
}

model MeetingTimes {
  id                    Int @id @default(autoincrement())
  startTime             DateTime
  endTime               DateTime
  days                  Day[]
  courseSection         CourseSections[]
}

enum Role {
  USER
  ADMIN
}

enum Day {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}
