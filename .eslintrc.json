{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "prettier",
        "@typescript-eslint"
    ],
    "rules": {
        "linebreak-style": "off",
        "require-jsdoc": "off",
        "object-curly-spacing": "off",
        "max-len": "off",
        "prettier/prettier": ["error"]
    },
    "ignorePatterns": [
        "*.d.ts",
        "node_modules",
        "build",
        "src/schema/graphql.ts"
    ]
}
