{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "linebreak-style": "off",
        "require-jsdoc": "off",
        "object-curly-spacing": "off",
        "max-len": "off",
        "quotes": [
            "error",
            "single"
        ]
    },
    "ignorePatterns": [
        "node_modules",
        "build",
        "src/schema/graphql.ts"
    ]
}
